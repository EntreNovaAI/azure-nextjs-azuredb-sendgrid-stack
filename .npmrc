# pnpm configuration for Next.js

# Auto-install peer dependencies
# This fixes the styled-jsx missing module error in Docker builds
auto-install-peers=true

# Use shamefully-hoist for better compatibility with Next.js
# This prevents module resolution issues in monorepos and Docker
shamefully-hoist=true

# Strict peer dependencies can cause issues with Next.js
# Set to false to allow builds to succeed
strict-peer-dependencies=false

